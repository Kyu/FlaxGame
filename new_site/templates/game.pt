<!DOCTYPE html metal:define-macro="game">

<html lang="en">
<head>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>

    <link rel="shortcut icon" href="${request.static_url('new_site:static/fav.png')}">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">

    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-102770740-1', 'auto');
      ga('send', 'pageview');

    </script>

    <link rel="stylesheet" href="${request.static_url('new_site:static/game.css')}">
    <!--
    <script src="${request.static_url('new_site:static/jquery/jquery-3.2.1.min.js')}"></script>
    <script src="${request.static_url('new_site:static/bootstrap/js/bootstrap.min.js')}"></script>
    <link rel="stylesheet" href="${request.static_url('new_site:static/bootstrap/css/bootstrap.min.css')}">
    <link rel="stylesheet" href="${request.static_url('new_site:static/bootstrap/css/bootstrap-theme.min.css')}">


    <script src="${request.static_url('new_site:static/game.js')}?v=${__import__('random').randint(1, 300)}"></script>
    -->

    <title>Game Display ${'-- ' + current_hex.name if current_hex else ''}</title>
</head>

<body>
    <div id="wrapper">
        <div id="flash" tal:condition="not current_hex and request.session.peek_flash('action')">
            <span tal:omit-tag=""
                tal:repeat="message request.session.pop_flash('action')">
                ${message}<br>
            </span>
        </div>
        <div id="flash" tal:condition="request.session.peek_flash('info')">
            <span tal:omit-tag=""
                tal:repeat="message request.session.pop_flash('info')">
                <p>${message}</p><br>
            </span>
        </div>

        <div id="sidebar-left" class="sidebar">
            <form action="${request.route_url('logout')}" method="post">
                <button id="logout">Logout!</button>
            </form>

            <div>
                <ul>
                    <li><h4><a href="${request.route_url('profile')}">${player.username}</a></h4></li>
                    <li><h4>Actions: ${player.actions}</h4></li>
                    <li><h4>Ammo: ${player.ammo}</h4></li>
                    <li><h4>Morale: ${player.morale}</h4></li>
                    <li><h4>Squad: ${player.squad_type}</h4></li>
                    <li><h4>Team: <a href="/team/${player.team}">${player.team}</a></h4></li>
                    <li><h4>Troops: ${player.troops}</h4></li>
                    <li><h4>Located at: <a href="${request.route_url('game')}/${player.location}">${player.location}</a></h4></li>
                </ul>
            </div>

            <div>
                <h3>Radio: </h3>
                <div id="flash" tal:condition="request.session.peek_flash('radio')">
                <span tal:omit-tag=""
                    tal:repeat="message request.session.pop_flash('radio')">
                    ${message}<br>
                </span>
                </div>
                <div tal:condition="radio" class="radio">

                    <ul tal:repeat="message [m for m in radio if m.team != 'all']">
                        <div class="message">
                            <p class="message-text${' server-log' if message.author == 'Server' else None}">${message.author}: ${message.message}</p>
                            <p class="message-timestamp">${message.timestamp}</p>
                        </div>
                    </ul>

                    <ul tal:repeat="announcement [i for i in radio if i.team == 'all' and i.active]" class="announcement">
                        <li><span tal:condition="user.admin">${announcement.id} -- </span> ${announcement.author}: ${announcement.message}</li>
                    </ul>
                </div>
                <form action="${request.route_url('send_message')}" method="post">
                    <textarea name="message" placeholder="Type your message here" maxlength="140"></textarea>
                    <button>Send message!</button>
                </form>
            </div>
            <h3><a href="${request.static_url('new_site:static/guide.html')}">Unsure of how to play? Click here!</a></h3>
        </div>

        <div tal:condition="current_hex" id="sidebar-right" class="sidebar">
            <div id="flash" tal:condition="request.session.peek_flash('action')">
                <span tal:omit-tag=""
                    tal:repeat="message request.session.pop_flash('action')">
                    ${message}<br>
                </span>
            </div>
            <div class="hex">
                <?python
                is_here = current_hex.name == player.location
                friendly = is_here and (current_hex.control == 'None' or current_hex.control == player.team) ?>
                <ul>
                    <h3>Location: <a href="${request.route_url('game')}/${current_hex.name}">${current_hex.name}</a></h3>
                    <h3>Terrain: ${current_hex.type}</h3>
                    <h4>Population: ${current_hex.population}</h4>
                    <form tal:condition="friendly" action="${request.route_url('recruit')}" method="post">
                        <button name="recruit">Recruit!</button>
                    </form>
                    <h4>Available ammo: ${current_hex.ammo}</h4>
                    <form tal:condition="friendly" action="${request.route_url('get_ammo')}" method="post">
                        <button name="take_ammo">Take Ammo!</button>
                    </form>
                    <h4>Industry: ${current_hex.industry}</h4>
                    <form tal:condition="friendly" action="${request.route_url('upgrade_industry')}" method="post">
                        <button name="industry">Upgrade!</button>
                    </form>
                    <h4>Industry: ${current_hex.infrastructure}</h4>
                    <form tal:condition="friendly" action="${request.route_url('upgrade_infrastructure')}" method="post">
                        <button name="infrastructure">Upgrade!!</button>
                    </form>
                    <h3 tal:condition="is_here">You are here!</h3>
                </ul>
                <?python
                        blue_total = {'sum': sum([i.troops for i in currently_here if i.team == 'Blue']), 'team': 'Blue'}
                        red_total = {'sum': sum([i.troops for i in currently_here if i.team == 'Red']), 'team': 'Red'}
                        yellow_total = {'sum': sum([i.troops for i in currently_here if i.team == 'Yellow']), 'team': 'Yellow'}
                        black_total = {'sum': sum([i.troops for i in currently_here if i.team == 'Black']), 'team': 'Black'}

                ?>
                <div id="also-here" tal:condition="currently_here and [i for i in currently_here if i.username is not player.username]">
                    <h2>Currently here:</h2>
                    <ul class="sidebar-nav">
                        <li tal:repeat="totals [i for i in (blue_total, red_total, yellow_total, black_total) if i['sum'] > 0]">
                            <p>${totals['team']} Troops: ${totals['sum']}</p>
                        </li>
                        <li tal:repeat="here_info [i for i in currently_here if i.username != player.username]">
                            <ul tal:condition="here_info.team == player.team or current_hex.name == player.location">
                                ${here_info.username}
                                    <li>Squad type: ${here_info.squad_type}</li>
                                    <li>Team: <a href="/team/${here_info.team}">${here_info.team}</a></li>
                                    <li>Troops: ${here_info.troops}</li>
                                    <form tal:condition="player.location == current_hex.name and player.team != here_info.team" action="${request.route_url('attack_player')}" method="post">
                                        <button name="player_called" value="${here_info.username}">Attack!</button>
                                    </form>
                            </ul>
                        </li>
                    </ul>

                </div>

                <form tal:condition="movable" action="${request.route_url('move_to')}" method="post">
                <button name="position" value="${current_hex.name}">Move here!</button>
                </form>
            </div>

        </div>

        <div id="content" class="container">
            <table cellspacing="0" class="table">
                <tr tal:repeat="hex_col [i for i in range(1, 11)]">
                    <td tal:repeat="hex_row [i for i in hexes if i.x == hex_col]" class="col-md-1 location ${'location-' + hex_row.type} ${'location-'+hex_row.control.lower() if hex_row.control != 'None' else ''}">
                        <a href="${request.route_url('game')}/${hex_row.name}">${hex_row.name}</a>
                    </td>
                </tr>
            </table>
        </div>

    </div>

</body>
</html>