<!DOCTYPE html metal:define-macro="game">

<html lang="en">
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>

    <!--
    <link rel="stylesheet" href="${request.static_url('new_site:static/bootstrap/css/bootstrap.min.css')}" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="${request.static_url('new_site:static/bootstrap/css/bootstrap-theme.min.css')}" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">
    <script src="${request.static_url('new_site:static/bootstrap/js/bootstrap.min.js')}"></script>
    -->
    <link rel="stylesheet" href="${request.static_url('new_site:static/game.css')}">


    <title>Game Display ${'-- ' + current_hex.name if current_hex else ''}</title>
</head>

<body>
    <div id="wrapper">
        <div id="flash" tal:condition="not current_hex and request.session.peek_flash('action')">
            <span tal:omit-tag=""
                tal:repeat="message request.session.pop_flash('action')">
                ${message}<br>
            </span>
        </div>
        <div id="flash" tal:condition="request.session.peek_flash('info')">
            <span tal:omit-tag=""
                tal:repeat="message request.session.pop_flash('info')">
                ${message}<br>
            </span>
        </div>

        <div id="sidebar-left" class="sidebar">
            <a href="${request.route_url('logout')}">Logout</a>

            <div>
                <ul>
                    <li><h4><a href="${request.route_url('profile')}">${player.username}</a></h4></li>
                    <li><h4>Actions: ${player.actions}</h4></li>
                    <li><h4>Ammo: ${player.ammo}</h4></li>
                    <li><h4>Morale: ${player.morale}</h4></li>
                    <li><h4></h4></li>
                    <li><h4>Team: ${player.team}</h4></li>
                    <li><h4>Troops: ${player.troops}</h4></li>
                    <li><h4>Located at: <a href="${request.route_url('game')}/${player.location}">${player.location}</a></h4></li>
                </ul>
            </div>

            <div>
                <h3>Radio: </h3>
                <div id="flash" tal:condition="request.session.peek_flash('radio')">
                <span tal:omit-tag=""
                    tal:repeat="message request.session.pop_flash('radio')">
                    ${message}<br>
                </span>
                </div>
                <div tal:condition="radio" class="radio">

                    <ul tal:repeat="message [m for m in radio]">
                        <div class="message">
                            <p class="message-text${' server-log' if message.author == 'Server' else None}">${message.author}: ${message.message}</p>
                            <p class="message-timestamp">${message.timestamp}</p>
                        </div>
                    </ul>

                    <ul tal:repeat="announcement [i for i in radio if i.team == 'all' and i.active]" class="announcement">
                        <li>${announcement.author}: ${announcement.message}</li>
                    </ul>
                </div>
                <form action="${request.route_url('send_message')}" method="post">
                    <input type="text" name="message" placeholder="send your message here" maxlength="140"><br>
                    <button>Send message!</button>
                </form>
            </div>
        </div>

        <div tal:condition="current_hex" id="sidebar-right" class="sidebar">
            <div id="flash" tal:condition="request.session.peek_flash('action')">
            <span tal:omit-tag=""
                tal:repeat="message request.session.pop_flash('action')">
                ${message}<br>
            </span>
        </div>
            <div class="hex">
                <h3>Location: <a href="${request.route_url('game')}/${current_hex.name}">${current_hex.name}</a></h3>

                <ul tal:condition="current_hex.name != player.location">
                    <h4>Population: ${current_hex.population}</h4>
                    <h4>Availible ammo: ${current_hex.ammo}</h4>
                    <h4>Industry: ${current_hex.industry}</h4>
                    <h4>Industry: ${current_hex.infrastructure}</h4>
                </ul>

                <ul tal:condition="current_hex.name == player.location">
                    <h4>Population: ${current_hex.population}</h4>
                    <form action="${request.route_url('recruit')}" method="post">
                        <button name="recruit">Recruit!</button>
                    </form>
                    <h4>Availible ammo: ${current_hex.ammo}</h4>
                    <form action="${request.route_url('get_ammo')}" method="post">
                        <button name="take_ammo">Take Ammo!</button>
                    </form>
                    <h4>Industry: ${current_hex.industry}</h4>
                    <form action="${request.route_url('upgrade_industry')}" method="post">
                        <button name="industry">Upgrade!</button>
                    </form>
                    <h4>Industry: ${current_hex.infrastructure}</h4>
                    <form action="${request.route_url('upgrade_infrastructure')}" method="post">
                        <button name="infrastructure">Upgrade!!</button>
                    </form>
                </ul>

                <h3 tal:condition="current_hex.name == player.location">You are here!</h3>

                <div id="also-here" tal:condition="currently_here and [i for i in currently_here if i.username is not player.username]">
                    <h2>Currently here:</h2>
                    <ul class="sidebar-nav">
                        <!-- TODO don't let players know who is in location unless team member  -->
                        <li tal:repeat="here_info [i for i in currently_here if i.username != request.authenticated_userid]">
                            <p>${here_info.username} who is a ${here_info.squad_type} for team <a href="/team/${here_info.team}">${here_info.team}</a> with ${here_info.troops} troops</p>
                            <form tal:condition="player.location == current_hex.name and player.team != here_info.team" action="${request.route_url('attack_player')}" method="post">
                                <button name="player_called" value="${here_info.username}">Attack!</button>
                             </form>
                        </li>
                    </ul>

                </div>

                <form tal:condition="movable" action="${request.route_url('move_to')}" method="post">
                <button name="position" value="${current_hex.name}">Move here!</button>
                </form>
            </div>

        </div>

        <div id="content" class="container">
            <table cellspacing="0" class="table">
                <tr tal:repeat="hex_col [i for i in range(1, 11)]">
                    <td tal:repeat="hex_row [i for i in hexes if i.x == hex_col]" class="hex col-md-1">
                        <a href="${request.route_url('game')}/${hex_row.name}">${hex_row.name}</a>
                    </td>
                </tr>
            </table>
        </div>

    </div>

</body>
</html>