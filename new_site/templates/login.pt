<body class='login'>
<h1 class='login'>Login</h1>
<div>
<div id="flash" tal:condition="request.session.peek_flash()">
  <span tal:omit-tag="" 
        tal:repeat="message request.session.pop_flash()">
      ${message}<br>
  </span>
</div>
<form action="${request.route_url('login')}" method="post">
     <input type="text" id="username" placeholder="username or email"
           name="username"/><br/>
    <input type="password" id="password" placeholder="password"
           name="password"/><br/>
    <button type="submit" name="login">login</button>
</form>

<h1>Register</h1>
<form action="${request.route_url('register')}" method="post">
    <input type="text" id="username" placeholder="username"
           name="username"/><br/>
    <input type="text" id="email" placeholder="email"
           name="email"/><br/>
    <input type="password" id="password" placeholder="password"
           name="password"/><br/>
    <button type="submit" name="register">Register</button>
</form>
<p>Forgot your password? <a href="/TODO_RECOVER_PASSWORD">Click here to tecover your password</a></p>

</div>
</body>

</html>